{
  "name": "cinema-api",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "npx prisma generate && tsx watch src/app.ts",
    "build": "tsc",
    "start": "npx prisma generate && tsx dist/app.js",
    "prisma:generate": "npx prisma generate",
    "prisma:push": "npx prisma db push",
    "prisma:init": "npx prisma generate && npx prisma db push",
    "prisma:reset": "npx prisma migrate reset --force && npx prisma db push",
    "prisma:deploy": "npx --yes prisma generate && npx --yes prisma migrate deploy",
    "test": "vitest --run",
    "lint": "biome check --apply .",
    "lint:check": "biome ci .",
    "type-coverage": "type-coverage --detail"
  },
  "dependencies": {
    "@hono/node-server": "^1.11.1",
    "@hono/swagger-ui": "^0.2.2",
    "@hono/zod-openapi": "^0.11.0",
    "@prisma/client": "^5.13.0",
    "bcryptjs": "^2.4.3",
    "hono": "^4.3.2",
    "zod": "^3.23.6",
    "zod-validation-error": "^3.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.12.8",
    "@types/swagger-ui-dist": "^3.30.4",
    "prisma": "^5.13.0",
    "tsx": "^4.9.0",
    "type-coverage": "^2.28.2",
    "typescript": "^5.4.5",
    "vitest": "^1.5.3"
  },
  "engines": {
    "node": ">=20.11"
  },
  "packageManager": "pnpm@9.0.6"
}
