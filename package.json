{
  "name": "cinema-api",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "npx prisma generate && tsx watch src/app.ts",
    "build": "tsc",
    "start": "npx prisma generate && tsx dist/app.js",
    "prisma:generate": "npx prisma generate",
    "prisma:push": "npx prisma db push",
    "prisma:init": "npx prisma generate && npx prisma db push",
    "prisma:reset": "npx prisma migrate reset --force && npx prisma db push",
    "test": "vitest --run",
    "lint": "biome check --apply .",
    "lint:check": "biome ci ."
  },
  "dependencies": {
    "@hono/node-server": "^1.11.0",
    "@hono/swagger-ui": "^0.2.1",
    "@hono/zod-openapi": "^0.11.0",
    "@prisma/client": "^5.12.1",
    "bcryptjs": "^2.4.3",
    "hono": "^4.2.5",
    "zod": "^3.22.5",
    "zod-validation-error": "^3.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.12.7",
    "@types/swagger-ui-dist": "^3.30.4",
    "prisma": "^5.12.1",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  },
  "engines": {
    "node": ">=20.11"
  },
  "packageManager": "pnpm@9.0.4"
}
